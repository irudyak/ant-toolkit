<project name="HBase test" default="test13" basedir="">

	<import><javaresource name="com/anttoolkit/anttoolkit.xml"/></import>

	<target name="test1">
		<zookeeperSession connectionString="saturn:2181" timeout="15000">
			<zookeeperCreate node="/test1" data="HELLO WORLD" mode="PERSISTENT"/>
		</zookeeperSession>
	</target>

	<target name="test2">
		<zookeeperSession connectionString="saturn:2181" timeout="15000">
			<zookeeperCreate node="/test1/aaa/bbb" data="HELLO WORLD" mode="PERSISTENT"/>
		</zookeeperSession>
	</target>

	<target name="test3">
		<zookeeperSession connectionString="saturn:2181" timeout="15000">
			<zookeeperDelete node="/test1" />
		</zookeeperSession>
	</target>

	<target name="test4">
		<zookeeperSession connectionString="saturn:2181" timeout="15000">
			<zookeeperExists node="/test1/aaa/bbb" property="result"/>
			<echo>${result}</echo>

			<zookeeperExists node="/test1/aaa/ccc" property="result"/>
			<echo>${result}</echo>
		</zookeeperSession>
	</target>

	<target name="test5">
		<zookeeperSession connectionString="saturn:2181" timeout="15000">
			<zookeeperGetData node="/test1/aaa"
				dataProperty="data"
				czxidProperty="czxid"
				mzxidProperty="mzxid"
				ctimeProperty="ctime"
				mtimeProperty="mtime"
				versionProperty="version"
				cversionProperty="cversion"
				aversionProperty="aversion"
				ephemeralOwnerProperty="ephemeralOwner"
				dataLengthProperty="dataLength"
				numChildrenProperty="numChildren"
				pzxidProperty="pzxid"/>

			<echo>data=${data}</echo>
			<echo>czxid=${czxid}</echo>
			<echo>mzxid=${mzxid}</echo>
			<echo>ctime=${ctime}</echo>
			<echo>mtime=${mtime}</echo>
			<echo>version=${version}</echo>
			<echo>cversion=${cversion}</echo>
			<echo>aversion=${aversion}</echo>
			<echo>ephemeralOwner=${ephemeralOwner}</echo>
			<echo>dataLength=${dataLength}</echo>
			<echo>numChildren=${numChildren}</echo>
			<echo>pzxid=${pzxid}</echo>

		</zookeeperSession>
	</target>

	<target name="test6">
		<generalInitArray name="children" />

		<zookeeperSession connectionString="saturn:2181" timeout="15000">
			<zookeeperGetChildren node="/" array="children" recursive="true"/>
		</zookeeperSession>

		<generalArrayLoop array="children" elementProperty="value">
			<echo>${value}</echo>
		</generalArrayLoop>
	</target>

	<target name="test7">
		<zookeeperSession connectionString="saturn:2181" timeout="15000">
			<zookeeperChildrenLoop node="/" recursive="true" property="value">
				<echo>value=${value}</echo>
			</zookeeperChildrenLoop>
		</zookeeperSession>
	</target>

	<target name="test8">
		<zookeeperSession connectionString="saturn:2181" timeout="15000">
			<zookeeperSetACL node="/test">
				<permission scheme="world" id="anyone" permissions="ALL"/>
				<permission scheme="digest" id="test:123" permissions="READ,WRITE"/>
			</zookeeperSetACL>
		</zookeeperSession>
	</target>

	<target name="test9">
		<zookeeperSession connectionString="saturn:2181" timeout="15000">
			<zookeeperGetACL node="/test" property="acl"/>
			<echo>${acl}</echo>
		</zookeeperSession>
	</target>

	<target name="test10">
		<zookeeperSession connectionString="saturn:2181" timeout="15000">
			<zookeeperSetData node="/test1/aaa/bbb" data="AAA BBB"/>
		</zookeeperSession>
	</target>

	<target name="test11">
		<zookeeperSession connectionString="saturn:2181" timeout="15000">
			<zookeeperTransaction>
				<zookeeperCheck node="/test1/aaa" version="1"/>
				<zookeeperCreate node="/test1/aaa/yyy" data="XXX" mode="PERSISTENT"/>
				<zookeeperDelete node="/test1/aaa/bbb" />
				<zookeeperSetData node="/test1" data="AAA BBB"/>
			</zookeeperTransaction>
		</zookeeperSession>
	</target>

	<target name="test12">

		<property name="threadsNumber" value="10"/>
	    <property name="threadSleepTime" value="8"/>
		<property name="threadsLogDir" value="${basedir}/thread-test"/>

		<delete dir="${basedir}/thread-test" includeemptydirs="true" />
		<mkdir dir="${basedir}/thread-test"/>

		<generalCreateCyclicBarrier name="cyclicBarrier" parties="${threadsNumber}"/>

		<echo>Starting threads...</echo>

		<generalForLoop from="1" to="${threadsNumber}" iterationProperty="iteration">

			<generalGenerateRandomInteger min="0" max="100" property="randomNumber"/>

			<generalProperty name="lockType" value="READ"/>

			<generalIf arg1="${randomNumber}" arg2="35" condition="&lt;=">
				<generalProperty name="lockType" value="WRITE"/>
			</generalIf>

      		<generalStartThread name="thread-${iteration}-${lockType}"
								group="threadsGroup"
								associatedValues="${lockType}"
								logFile="${threadsLogDir}\thread-${iteration}.log">

				<generalGetThreadAssociatedValue index="0" property="lockType"/>

				<zookeeperSession connectionString="saturn:2181" timeout="15000">

					<!-- Perform simple operation to create real connection between
						ZooKeeper ensemble an a host performing this Ant script -->
					<zookeeperExists node="/locks" property="exist"/>

					<generalWaitCyclicBarrier name="cyclicBarrier"/>

					<zookeeperSynchronizationSection rootNode="/locks" sectionName="AAA" lockType="${lockType}">

						<echo>Doing some work...</echo>

						<sleep seconds="${threadSleepTime}"/>

					</zookeeperSynchronizationSection>

				</zookeeperSession>

      		</generalStartThread>

  		</generalForLoop>

		<echo>Waiting for threads to complete...</echo>
		<generalWaitThread group="threadsGroup" failonany="true"/>

	</target>

	<target name="test13">

		<property name="threadsNumber" value="10"/>
		<property name="threadsLogDir" value="${basedir}/thread-test"/>
		<property name="parties" value="2"/>
		<property name="iterations" value="2"/>

		<delete dir="${basedir}/thread-test" includeemptydirs="true" />
		<mkdir dir="${basedir}/thread-test"/>

		<echo>Creating cyclic barrier...</echo>

		<generalCreateCyclicBarrier name="cyclicBarrier" parties="${threadsNumber}"/>

		<zookeeperSession connectionString="saturn:2181" timeout="15000">
			<zookeeperCreateCyclicBarrier rootNode="/" name="AAA" parties="${parties}"/>
		</zookeeperSession>

		<echo>Starting threads...</echo>

		<generalForLoop from="1" to="${threadsNumber}" iterationProperty="iteration">

      		<generalStartThread name="thread-${iteration}"
								group="threadsGroup"
								associatedValues="${sleepTimeout}"
								logFile="${threadsLogDir}\thread-${iteration}.log">

				<generalGetThreadAssociatedValue index="0" property="sleepTimeout"/>

				<zookeeperSession connectionString="saturn:2181" timeout="15000">

					<generalForLoop from="1" to="${iterations}">

						<generalWaitCyclicBarrier name="cyclicBarrier"/>

						<zookeeperWaitCyclicBarrier name="AAA"/>

						<echo>Doing some work...</echo>
						<sleep seconds="2"/>
						<echo>Work completed...</echo>

					</generalForLoop>

				</zookeeperSession>

      		</generalStartThread>

  		</generalForLoop>

		<echo>Waiting for threads to complete...</echo>
		<generalWaitThread group="threadsGroup" failonany="true"/>

		<echo>Deleting cyclic barrier...</echo>
		<zookeeperSession connectionString="saturn:2181" timeout="15000">
			<zookeeperDeleteCyclicBarrier name="AAA"/>
		</zookeeperSession>
	</target>

</project>