<project name="Loop test" default="test" basedir=".">

	<import><javaresource name="com/anttoolkit/anttoolkit.xml"/></import>

	<target name="test">

		<echo>--- FOR LOOP ---</echo>
		<generalForLoop from="0" to="20" iterationProperty="iter">
			<echo>Iteration - ${iter}</echo>
		</generalForLoop>

		<echo></echo>

		<echo>--- WHILE LOOP ---</echo>
		<property name="i" value="0"/>

		<generalWhileLoop arg1="${i}" arg2="10" condition="&lt;" iterationProperty="iter">
			<echo>Iteration - ${iter}</echo>
			<generalAdd arg1="${i}" arg2="1" property="i"/>
		</generalWhileLoop>

	</target>

</project>