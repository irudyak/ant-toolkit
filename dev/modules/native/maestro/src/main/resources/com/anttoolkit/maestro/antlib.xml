<?xml version="1.0"?>
<antlib>
	<!-- Generic tasks -->
	<taskdef name="maestro.session" classname="com.anttoolkit.maestro.tasks.MaestroSessionTask" />
	<taskdef name="maestro.xmlItemAttribute" classname="com.anttoolkit.maestro.tasks.utils.GetXmlItemAttributeTask" />

	<!-- Report tasks -->
	<taskdef name="maestro.instanceReport" classname="com.anttoolkit.maestro.tasks.report.InstanceReportTask" />
	<taskdef name="maestro.subtotalReport" classname="com.anttoolkit.maestro.tasks.report.SubtotalReportTask" />

	<!-- Instance management -->
	<taskdef name="maestro.instancesLoop" classname="com.anttoolkit.maestro.tasks.instance.InstancesLoopTask" />
	<taskdef name="maestro.instanceInfo" classname="com.anttoolkit.maestro.tasks.instance.InstanceInfoTask" />
	<taskdef name="maestro.startInstance" classname="com.anttoolkit.maestro.tasks.instance.StartInstanceTask" />
	<taskdef name="maestro.stopInstance" classname="com.anttoolkit.maestro.tasks.instance.StopInstanceTask" />
	<taskdef name="maestro.suspendInstance" classname="com.anttoolkit.maestro.tasks.instance.SuspendInstanceTask" />
	<taskdef name="maestro.rebootInstance" classname="com.anttoolkit.maestro.tasks.instance.RebootInstanceTask" />
	<taskdef name="maestro.terminateInstance" classname="com.anttoolkit.maestro.tasks.instance.TerminateInstanceTask" />
	<taskdef name="maestro.runInstance" classname="com.anttoolkit.maestro.tasks.instance.RunInstanceTask" />
	<taskdef name="maestro.waitInstanceState" classname="com.anttoolkit.maestro.tasks.instance.WaitInstanceStateTask" />

	<!-- Volume management -->
	<taskdef name="maestro.volumesLoop" classname="com.anttoolkit.maestro.tasks.volume.VolumesLoopTask" />
	<taskdef name="maestro.volumeInfo" classname="com.anttoolkit.maestro.tasks.volume.VolumeInfoTask" />
	<taskdef name="maestro.createVolume" classname="com.anttoolkit.maestro.tasks.volume.CreateVolumeTask" />
	<taskdef name="maestro.detachVolume" classname="com.anttoolkit.maestro.tasks.volume.DetachVolumeTask" />
	<taskdef name="maestro.attachVolume" classname="com.anttoolkit.maestro.tasks.volume.AttachVolumeTask" />
	<taskdef name="maestro.reattachVolume" classname="com.anttoolkit.maestro.tasks.volume.ReattachVolumeTask" />
	<taskdef name="maestro.resizeVolume" classname="com.anttoolkit.maestro.tasks.volume.ResizeVolumeTask" />
	<taskdef name="maestro.deleteVolume" classname="com.anttoolkit.maestro.tasks.volume.DeleteVolumeTask" />
	<taskdef name="maestro.waitVolumeState" classname="com.anttoolkit.maestro.tasks.volume.WaitVolumeStateTask" />

	<!-- Schedule management -->
	<taskdef name="maestro.schedulesLoop" classname="com.anttoolkit.maestro.tasks.schedule.SchedulesLoopTask" />

	<!-- Checkpoint management -->
	<taskdef name="maestro.checkpointLoop" classname="com.anttoolkit.maestro.tasks.checkpoint.CheckpointLoopTask" />

	<!-- Properties management -->
	<taskdef name="maestro.getProperties" classname="com.anttoolkit.maestro.tasks.properties.GetPropertiesTask" />
	<taskdef name="maestro.setProperties" classname="com.anttoolkit.maestro.tasks.properties.SetPropertiesTask" />
	<taskdef name="maestro.deleteProperties" classname="com.anttoolkit.maestro.tasks.properties.DeletePropertiesTask" />

	<!-- Types -->
	<typedef name="maestro.config" classname="com.anttoolkit.maestro.types.MaestroConfig"/>

</antlib>